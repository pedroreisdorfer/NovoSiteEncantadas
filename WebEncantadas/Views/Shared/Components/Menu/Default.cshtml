@using WebEncantadas.Models.Entities
@model Usuario

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebEncantadas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
</head>

<style>
    .linkColor{
        color: #ffffffed !important;
    }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 minhaNavBar">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 linksCabecalho">
                        <li class="nav-item">
                            <a class="nav-link text-dark linkColor" asp-area="" asp-controller="Home" asp-action="Index">Olá, Pedro</a>
                        </li>
                        <li class="nav-item">
                            @*Ingresso é o nome da minha controller e Reserve é a função chamada da controller*@
                            <a class="nav-link text-dark linkColor" asp-area="" asp-controller="Ingresso" asp-action="Reserve">Compre seu ingresso</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark linkColor" asp-area="" asp-controller="Quem_Somos" asp-action="Quem_Somos">Quem Somos</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark linkColor" asp-area="" asp-controller="Cha" asp-action="Cha">Funcionamento do Chá</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark linkColor" asp-area="" asp-controller="FotosVideos" asp-action="FotosVideos">Fotos e Vídeos</a>
                        </li>                     
                        <li class="nav-item">
                            <a class="nav-link text-dark linkColor" asp-area="" asp-controller="Cadastro" asp-action="Create">Cadastre-se</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark linkColor" asp-area="" asp-controller="Login" asp-action="SairSessaoUsuario">Sair</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark linkColor" asp-area="" asp-controller="Duvidas" asp-action="Duvidas">Dúvidas Frequentes</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
</body>
</html>
