            </div>
            <div class="form-group">
                <label asp-for="IdadeCrianca" class="control-label">Idade da Criança</label>
                <input asp-for="IdadeCrianca" class="form-control" />
                <span asp-validation-for="IdadeCrianca" class="text-danger"></span>
            </div>
